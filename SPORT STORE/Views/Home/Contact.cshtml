@model SPORT_STORE.Models.User
@{
    ViewBag.Title = "Contact";
}
<!-- contact section start -->
<div class="collection_text">Contact Us</div>
<div class="layout_padding contact_section">
    <div class="container">
        <h1 class="new_text"><strong>Kontakto Tani</strong></h1>
    </div>
    <div class="container-fluid ram">
        <div class="row">
            <div class="col-md-6">
                <div class="email_box">
                    <div class="input_main">
                        <div class="container">
                            @*<form action="/action_page.php">*@
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Emri, new { @class = "email-bt", placeholder = "Emri" })
                                    @*<input type="text" class="email-bt" placeholder="Emri" name="Name">*@
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "email-bt", placeholder = "Email" })
                                    @*<input type="text" class="email-bt" placeholder="Telefon" name="Name">*@
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.NrTelefon, new { @class = "email-bt", placeholder = "Telefon" })
                                    @*<input type="text" class="email-bt" placeholder="Email" name="Email">*@

                                </div>

                                <div class="form-group">
                                    <textarea class="massage-bt" placeholder="Masazh" rows="5" id="comment" name="Massage"></textarea>
                                </div>
                                <div class="send_btn">
                                    <button class="main_bt">Dergo</button>
                                </div>
                            }  @*</form>*@
                            </div>
                      
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="shop_banner">
                    <div class="our_shop">
                        <button class="out_shop_bt">Dyqani jone</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- contact section end -->

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}